generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  records Record[] @relation("UserRecord")
}

model Emotion {
  id                Int       @id @default(autoincrement())
  name              String    @unique
  type              String
  primaryEmotionId  Int?
  primaryEmotion    Emotion?  @relation("PrimaryEmotion", fields: [primaryEmotionId], references: [id])
  secondaryEmotions Emotion[] @relation("PrimaryEmotion")
  records           Record[]  @relation("EmotionInRecord")
}

model Record {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation("UserRecord", fields: [userId], references: [id])
  emotionId Int
  emotion   Emotion @relation("EmotionInRecord", fields: [emotionId], references: [id])
}
